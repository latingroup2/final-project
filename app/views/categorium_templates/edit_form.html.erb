<!-- Validation failure messages -->
<% if @categorium.errors.any? %>
  <% @categorium.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit categorium #<%= @categorium.id %>
</h1>

<hr>

<form action="/update_categorium/<%= @categorium.id %>" method="post">
  <!-- Label and input for descripcion -->
  <div class="form-group">
    <label for="descripcion">
      Descripcion
    </label>

    <textarea id="descripcion" name="descripcion" class="form-control" rows="3"><%= @categorium.descripcion %></textarea>
  </div>

  <!-- Label and input for eje_id -->
  <div class="form-group">
    <label for="eje_id">
      Eje
    </label>

    <input type="text" id="eje_id" name="eje_id" class="form-control" value="<%= @categorium.eje_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update categorium
  </button>
</form>

<hr>

<a href="/categoria">
  Go back
</a>
