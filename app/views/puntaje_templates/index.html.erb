<h1>
  All puntajes
</h1>

<a href="/puntajes/new">
  Add a new puntaje
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Nivel
    </th>

    <th>
      Categoria
    </th>

    <th>
      Score
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @puntajes.each do |puntaje| %>
  <tr>
    <td>
      <%= puntaje.id %>
    </td>

    <td>
      <%= puntaje.nivel_id %>
    </td>

    <td>
      <%= puntaje.categoria_id %>
    </td>

    <td>
      <%= puntaje.score %>
    </td>

    <td>
      <%= time_ago_in_words(puntaje.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(puntaje.updated_at) %> ago
    </td>

    <td>
      <a href="/puntajes/<%= puntaje.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
