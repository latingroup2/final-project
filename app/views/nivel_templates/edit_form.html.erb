<!-- Validation failure messages -->
<% if @nivel.errors.any? %>
  <% @nivel.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit nivel #<%= @nivel.id %>
</h1>

<hr>

<form action="/update_nivel/<%= @nivel.id %>" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @nivel.user_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update nivel
  </button>
</form>

<hr>

<a href="/nivels">
  Go back
</a>
