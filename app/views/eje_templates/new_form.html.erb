<!-- Validation failure messages -->
<% if @eje.present? %>
  <% if @eje.errors.any? %>
    <% @eje.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new eje
</h1>

<hr>

<form action="/create_eje" method="post">
  <!-- Label and input for materia_id -->
  <div class="form-group">
    <label for="materia_id">
      Materia
    </label>

    <input type="text" id="materia_id" name="materia_id" class="form-control" value="<%= @eje.try(:materia_id) %>">
  </div>

  <!-- Label and input for description -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @eje.try(:description) %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create eje
  </button>
</form>

<hr>

<a href="/ejes">
  Go back
</a>
