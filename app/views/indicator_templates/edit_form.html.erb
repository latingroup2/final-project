<!-- Validation failure messages -->
<% if @indicator.errors.any? %>
  <% @indicator.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit indicator #<%= @indicator.id %>
</h1>

<hr>

<form action="/update_indicator/<%= @indicator.id %>" method="post">
  <!-- Label and input for objetivo_id -->
  <div class="form-group">
    <label for="objetivo_id">
      Objetivo
    </label>

    <input type="text" id="objetivo_id" name="objetivo_id" class="form-control" value="<%= @indicator.objetivo_id %>">
  </div>

  <!-- Label and input for descripcion -->
  <div class="form-group">
    <label for="descripcion">
      Descripcion
    </label>

    <textarea id="descripcion" name="descripcion" class="form-control" rows="3"><%= @indicator.descripcion %></textarea>
  </div>

  <!-- Label and input for numeral -->
  <div class="form-group">
    <label for="numeral">
      Numeral
    </label>

    <input type="text" id="numeral" name="numeral" class="form-control" value="<%= @indicator.numeral %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update indicator
  </button>
</form>

<hr>

<a href="/indicators">
  Go back
</a>
