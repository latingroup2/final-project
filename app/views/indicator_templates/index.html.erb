<h1>
  All indicators
</h1>

<a href="/indicators/new">
  Add a new indicator
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Objetivo
    </th>

    <th>
      Descripcion
    </th>

    <th>
      Numeral
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @indicators.each do |indicator| %>
  <tr>
    <td>
      <%= indicator.id %>
    </td>

    <td>
      <%= indicator.objetivo_id %>
    </td>

    <td>
      <%= indicator.descripcion %>
    </td>

    <td>
      <%= indicator.numeral %>
    </td>

    <td>
      <%= time_ago_in_words(indicator.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(indicator.updated_at) %> ago
    </td>

    <td>
      <a href="/indicators/<%= indicator.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
