<!-- Validation failure messages -->
<% if @tema.present? %>
  <% if @tema.errors.any? %>
    <% @tema.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new tema
</h1>

<hr>

<form action="/create_tema" method="post">
  <!-- Label and input for nombre -->
  <div class="form-group">
    <label for="nombre">
      Nombre
    </label>

    <textarea id="nombre" name="nombre" class="form-control" rows="3"><%= @tema.try(:nombre) %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create tema
  </button>
</form>

<hr>

<a href="/temas">
  Go back
</a>
