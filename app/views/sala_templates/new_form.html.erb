<!-- Validation failure messages -->
<% if @sala.present? %>
  <% if @sala.errors.any? %>
    <% @sala.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new sala
</h1>

<hr>

<form action="/create_sala" method="post">
  <!-- Label and input for profesor_id -->
  <div class="form-group">
    <label for="profesor_id">
      Profesor
    </label>

    <input type="text" id="profesor_id" name="profesor_id" class="form-control" value="<%= @sala.try(:profesor_id) %>">
  </div>

  <!-- Label and input for colegio_id -->
  <div class="form-group">
    <label for="colegio_id">
      Colegio
    </label>

    <input type="text" id="colegio_id" name="colegio_id" class="form-control" value="<%= @sala.try(:colegio_id) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create sala
  </button>
</form>

<hr>

<a href="/salas">
  Go back
</a>
