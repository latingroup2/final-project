<h1>
  All salas
</h1>

<a href="/salas/new">
  Add a new sala
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Profesor
    </th>

    <th>
      Colegio
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @salas.each do |sala| %>
  <tr>
    <td>
      <%= sala.id %>
    </td>

    <td>
      <%= sala.profesor_id %>
    </td>

    <td>
      <%= sala.colegio_id %>
    </td>

    <td>
      <%= time_ago_in_words(sala.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(sala.updated_at) %> ago
    </td>

    <td>
      <a href="/salas/<%= sala.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
